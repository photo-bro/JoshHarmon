{
    "Logging": {
        "LogLevel": {
            "Default": "Debug"
        }
    },
    "Serilog": {
        "Default": "Verbose",
        "Override": {
            "System": "Information",
            "Microsoft": "Information"
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
                }
            },
            {
                "Name": "RollingFile",
                "Args": {
                    "pathFormat": "logfiles/{Date}-warnings.json",
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "restrictedToMinimumLevel": "Information",
                    "fileSizeLimitBytes": "50000000"
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    },
    "MetricsOptions": {
        "DefaultContextLabel": "JoshHarmon.Site",
        "Enabled": true,
        "ReportingEnabled": true
    },
    "MetricsWebTrackingOptions": {
        "ApdexTrackingEnabled": true,
        "ApdexTSeconds": 0.1,
        "IgnoredHttpStatusCodes": [ 101, 304 ],
        "IgnoredRoutesRegexPatterns": [],
        "OAuth2TrackingEnabled": true
    },
    "MetricEndpointsOptions": {
        "MetricsEndpointEnabled": true,
        "MetricsTextEndpointEnabled": true,
        "EnvironmentInfoEndpointEnabled": true
    },
    "MetricsReportingOptions": {
        "AppendMetricsToTextFile": true,
        "OutputPathAndFileName": "metrics.txt"
    },
    "AllowedHosts": "*",
    "JsonContentPath": "/DefaultContent.json",
    "CacheConfig": {
        "DefaultExpirationDuration": "00:30:00",
        "UseUtc": false
    },
    "GithubConfig": {
        "UserName": "photo-bro",
        "AccessToken": ""
    }
}
